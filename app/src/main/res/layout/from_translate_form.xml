<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/from_translate_cw"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/fromTranslate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/btn_add_to_fav"
            android:ems="10"
            android:textAppearance="@android:style/TextAppearance.Medium"/>

        <ImageButton
            android:id="@+id/btn_add_to_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/btn_fav"
            android:contentDescription="@string/description_of_add_to_fav_btn"/>

        <ImageButton
            android:id="@+id/btn_copy_translated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/fromTranslate"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/description_of_copy_translated_text_btn"
            app:srcCompat="@drawable/ic_copy_text"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>